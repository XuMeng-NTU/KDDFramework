<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="PersistenceUnit" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>persistence.component.Component</class>
    <class>persistence.component.method.Method</class>
    <class>persistence.component.parameter.ParameterDefinition</class>
    <class>persistence.component.parameter.ParameterValue</class>
    <class>persistence.dataset.Dataset</class>
    <class>persistence.dataset.attribute.Attribute</class>
    <class>persistence.flow.Flow</class>
    <class>persistence.flow.edge.Edge</class>
    <class>persistence.flow.node.Node</class>
    <class>persistence.registry.RegistryItem</class>
    <class>persistence.senario.Senario</class>
    <class>persistence.senario.source.Source</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/smpf"/>
      <property name="javax.persistence.jdbc.password" value="smpf"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.user" value="smpf"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
